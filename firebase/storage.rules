rules_version = '2';

// Firebase Storage Security Rules for Pair Up Events
// These rules control access to files stored in Firebase Storage

service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      // Require authentication
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Profile Pictures
    // Path: profile-pictures/{userId}
    // - Each user can have only one profile picture
    // - Profile pictures are visible to all authenticated users
    // - Only the owner can upload, update, or delete their picture
    match /profile-pictures/{userId} {

      // Allow any authenticated user to read profile pictures
      // This makes profile pictures visible to everyone in the app
      allow read: if isAuthenticated();

      // Allow users to create or update only their own profile picture
      allow create, update: if isOwner(userId)
                            && request.resource.size < 5 * 1024 * 1024  // Max file size: 5MB
                            && request.resource.contentType.matches('image/.*');  // Only image files

      // Allow users to delete only their own profile picture
      allow delete: if isOwner(userId);
    }

    // Deny all other access by default
    // This ensures that no other files can be accessed without explicit rules
  }
}
